<?xml version="1.0"?>
<ruleset name="Laravel App Code Standards">
    <description>PHP CodeSniffer configuration for Laravel.</description>

    <!-- Define the default standard to use -->
    <rule ref="PSR12"/>

    <!-- Include these directories in the analysis -->
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>resources</file>
    <file>routes</file>
    <file>tests</file>

    <!-- Exclude the following directories from the analysis -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>public/*</exclude-pattern>
</ruleset>